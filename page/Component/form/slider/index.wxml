<!--page/Component/form/slider/index.wxml-->
<text>表单组件 --slider</text>
<view class='group'>
    <view>设置step</view>
    <slider value='{{one}}' bindchange='bindchange' bindchanging='bindchanging'></slider>
</view>
<view class='group'>
    <view>显示当前value</view>
    <slider value='{{two}}' show-value bindchange='bindchange'  bindchanging='bindchanging' block-size='20'></slider>
</view>
<view class='group'>
    <view>设置最大值和最小值</view>
    <slider value='{{three}}' show-value  max='200'  min='20' step='10'></slider>
</view>